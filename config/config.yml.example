# SCOA Dashboard Configuration - Example
# Copy this file to config.yml and modify with your actual values
# DO NOT commit config.yml with real API keys to Git!

app:
  name: "SCOA Crypto Trading Dashboard"
  version: "1.0.0"
  debug: false
  log_level: "INFO"
  log_file: "logs/scoa_dashboard.log"

# InfluxDB Configuration
influxdb:
  host: "influxdb"
  port: 8086
  database: "crypto_trading"
  username: "admin"
  password: "password123"
  bucket: "trading_data"
  organization: "scoa"
  token: "your-influxdb-token-here"
  timeout: 30

# Data Collection Settings
data_collection:
  interval_minutes: 1  # How often to collect data
  batch_size: 100
  retry_attempts: 3
  timeout_seconds: 30
  concurrent_requests: 5

# Exchanges Configuration
exchanges:
  binance:
    enabled: false  # Set to true and add your API keys
    name: "Binance"
    api_key: "your-binance-api-key-here"
    api_secret: "your-binance-api-secret-here"
    sandbox: false
    rate_limit: 120  # requests per minute
    symbols:
      - "FDUSDUSDT"
    urls:
      api: "https://api.binance.com"
      testnet: "https://testnet.binance.vision"
    
  htx:
    enabled: false  # Set to true and add your API keys
    name: "HTX (Huobi)"
    api_key: "your-htx-api-key-here"
    api_secret: "your-htx-api-secret-here"
    sandbox: false
    rate_limit: 100  # requests per second
    symbols:
      - "usdcusdt"
    urls:
      api: "https://api.huobi.pro"
      websocket: "wss://api.huobi.pro/ws"

  binance2:
    enabled: false  # Set to true and add your API keys
    name: "Binance Account 2"
    api_key: "your-binance2-api-key-here"
    api_secret: "your-binance2-api-secret-here"
    sandbox: false
    rate_limit: 120  # requests per minute
    symbols:
      - "FDUSDUSDT"
    urls:
      api: "https://api.binance.com"
      testnet: "https://testnet.binance.vision"

# Monitoring Settings
monitoring:
  health_check_interval: 60  # seconds
  metrics_retention_days: 30
  alert_cooldown_minutes: 15

# Grafana Integration
grafana:
  host: "localhost"
  port: 3033
  admin_user: "admin"
  admin_password: "admin123"
  
# Alert Settings
alerts:
  enabled: true
  price_change_threshold: 5.0  # percentage
  volume_change_threshold: 20.0  # percentage
  balance_change_threshold: 10.0  # percentage
  
# Performance Settings
performance:
  max_workers: 4
  request_timeout: 30
  connection_pool_size: 20