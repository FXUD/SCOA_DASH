# SCOA Dashboard Configuration - Production
# This file contains actual configuration values
# Copy from config.example.yml and modify as needed

app:
  name: "SCOA Crypto Trading Dashboard"
  version: "1.0.0"
  debug: false
  log_level: "INFO"
  log_file: "logs/scoa_dashboard.log"

# InfluxDB Configuration
influxdb:
  host: "influxdb"
  port: 8086
  database: "crypto_trading"
  username: "admin"
  password: "password123"
  bucket: "trading_data"
  organization: "scoa"
  token: "scoa-admin-token-change-this"
  timeout: 30

# Data Collection Settings
data_collection:
  interval_minutes: 1  # How often to collect data
  batch_size: 100
  retry_attempts: 3
  timeout_seconds: 30
  concurrent_requests: 5

# Exchanges Configuration
exchanges:
  binance:
    enabled: true  # Set to true and add your API keys
    name: "Binance"
    api_key: "a8J619uaVgKd4Tq2xdloBxfd0RfqJJi7CQZ0fK9OCU56SvxYk66mACyxFbdN4kJU"
    api_secret: "UEMH15lbSSHqk1Ldf0Ho8TNnATrxh4MBJnBF7aA4m3CFaZbjf0iwp9jzW7UhGIEJ"
    sandbox: false
    rate_limit: 120  # requests per minute
    symbols:
      - "FDUSDUSDT"
    urls:
      api: "https://api.binance.com"
      testnet: "https://testnet.binance.vision"
    
  htx:
    enabled: true  # Set to true and add your API keys
    name: "HTX (Huobi)"
    api_key: "d617db23-b1rkuf4drg-21c2e18e-227c8"
    api_secret: "692a898e-b33ad56f-2f409119-4759a"
    sandbox: false
    rate_limit: 100  # requests per second
    symbols:
      - "usdcusdt"
    urls:
      api: "https://api.huobi.pro"
      websocket: "wss://api.huobi.pro/ws"

# Monitoring Settings
monitoring:
  health_check_interval: 60  # seconds
  metrics_retention_days: 30
  alert_cooldown_minutes: 15

# Grafana Integration
grafana:
  host: "localhost"
  port: 3033
  admin_user: "admin"
  admin_password: "admin123"
  
# Alert Settings
alerts:
  enabled: true
  price_change_threshold: 5.0  # percentage
  volume_change_threshold: 20.0  # percentage
  balance_change_threshold: 10.0  # percentage
  
# Performance Settings
performance:
  max_workers: 4
  request_timeout: 30
  connection_pool_size: 20